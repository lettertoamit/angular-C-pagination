    <div class="col-md-6">
        <div class="dataTables_length">

        </div>
    </div>
    <div ng-include="'Pagination'"></div>
    <!-- pagination end -->
    <table class="table table-striped">
        @*// table-responsive*@
        <thead>
            <tr>
                <th>Date</th>
                <th>Name</th>
                <th>Mobile Number</th>
                <th>User Type</th>
                <th>Username</th>
                <th>           </th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="i in StandardJson">
                <td>{{i.Createddate}}</td>
                <td>{{i.fname}} {{i.lname}}</td>
                <td> {{i.mobileno}}</td>
                <td>{{ ( i.usertype == 0 )?"admin":( ( i.usertype == 1 )?"vendor":"customer" ) }}</td>
                <td>{{i.username}}</td>
                <td>
                    <a href="/administrator/users/edit/{{i.id}}"><i class='fa fa-pencil' aria-hidden='true'></i></a> 
                    <a href="/administrator/users/delete/{{i.id}}"><i class='fa fa-trash-o' aria-hidden='true'></i></a>
                </td>
            </tr>
        </tbody>
    </table>
</div> 